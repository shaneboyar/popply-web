<% if @posts.any? %>
	<% @posts.each do |post| %>
		<div class="panel panel-default post">
			<div class="panel-heading"><h3><%= post.title %></h3><small><%= User.find(post.user_id).first_name %> posted - <%= time_ago_in_words(post.created_at) %> ago.</small></div>
			<div class="panel-body">
				<p class=""><%= h(post.content).gsub(/\n/, '<br/>').html_safe %></p>
			</div>
			<% if post.comments.any? %>
				<ul class="list-group comments">
					<% post.comments.each do |comment| %>
					<% user = User.find(comment.user_id) %>
					<li class="list-group-item">
						<i class="fa fa-bullhorn" aria-hidden="true"></i> <%= comment.content %><br /><small><p class="text-right">(<%= user.first_name %> - <%= time_ago_in_words(comment.created_at) %> ago.)</p></small>
					</li>
					<% end %>
				</ul>
			<% end %>
		</div>
		<%= link_to "Comment", new_comment_path(id: @group, post_id: post), class: :"btn btn-primary btn-block comment-button", role: :"button", remote: :true, id: :"new-comment-button-#{post.id}" %>
		<div id="new-comment">
			<!-- This is where the comment input will appear -->
		</div>
	<% end %>
<% end %>
