<% if @posts.any? %>
	<% @posts.each do |post| %>
		<div class="panel panel-default post">
			<div class="panel-heading"><strong><%= User.find(Membership.find(post.membership_id).user_id).first_name %> posted - <%= time_ago_in_words(post.created_at) %> ago.</strong></div>
			<div class="panel-body">
				<p class="lead"><%= post.content %></p>
			</div>
			<% if post.comments.any? %>
				<ul class="list-group comments">
					<% post.comments.each do |comment| %>
					<% user = User.find(comment.user_id) %>
					<li class="list-group-item">
						<strong><%= user.first_name %>:</strong> <%= comment.content %> - <small><%= time_ago_in_words(comment.created_at) %> ago.</small>
					</li>
					<% end %>
				</ul>
			<% end %>
		</div>
		<%= link_to "Comment", new_comment_path(id: @group, post_id: post), class: :"btn btn-primary btn-block comment-button", role: :"button", remote: :true, id: :"new-comment-button-#{post.id}" %>
		<div id="new-comment">
			<!-- This is where the comment input will appear -->
		</div>
	<% end %>
<% end %>
