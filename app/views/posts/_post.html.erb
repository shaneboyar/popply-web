<li id="post-<%= post.id %>">
  <p class="content">
  	<%= post.content %>
  </p>
  <small class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <% if session[:user_id] == @user.id %>
      <%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </small>
</li>