<%= form_for @post, url: new_post_path, method: "post" do |f| %>
  <div class="field">
  	<div class="form-group">
    	<%= f.text_field :title, placeholder: "Title that shit.", class: :"form-control" %>
  	</div>
  	<div class="form-group">
    	<%= f.cktext_area :content, class: :"form-control" %>
  	</div>
  </div>
  <%= f.submit "Post", class: "btn btn-default btn-block" %>
<% end %>
<%= javascript_include_tag Ckeditor.cdn_url %>