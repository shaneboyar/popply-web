<% @group.show.show_weeks.each do |week| %>
	<div class="row">
		<h4>Week <%= week.id %></h4>
		<% if @group.memberships.find_by(user: @current_user).picks.where(week: week).any? %>
			<% @group.memberships.find_by(user: @current_user).picks.where(week: week).each do |pick| %>
				<% @contestant = Contestant.find(pick.contestant_id) %>
				<div class="col-xs-3 col-md-3">
					<%= link_to image_tag(@contestant.image), @contestant, class: :"thumbnail player-image" %>
				<div class="caption small player-name"><%= @contestant.name %></div>
				</div>
			<% end %>
		<% else %>
			<%= link_to "Make Picks", new_picks_path(week_id: week.id), class:"btn btn-default"  %>
		<% end %>
	</div>
<% end %>