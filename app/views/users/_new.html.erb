<div class="row vertical-align splash-form">
	<div class="col-md-6 col-md-offset-3 text-center border-box">
		<div class="jumbotron vertical-align">
			<h1>Test</h1>
			<%= form_for @user do |f| %>
			<div class="form-group">
				<%= f.label :first_name %>
				<%= f.text_field :first_name, class: :"form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :last_name %>
				<%= f.text_field :last_name, class: :"form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :email %>
				<%= f.email_field :email, class: :"form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password, class: :"form-control" %><br />
			</div>

				<%= f.submit "Sign Up", class: :"btn btn-default" %>
			<% end %>

			<div>
				<%= link_to "Already have an account? Log in here", login_path, remote: :true %>
			</div>
		</div>
	</div>
</div>
