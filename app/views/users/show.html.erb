<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag(@user.image_link) %>
      <div class="caption">
        <h3><%= @user.first_name%> <%= @user.last_name %></h3>
        <% if current_user == @user %>
        <p>
          <%= link_to "Edit Profile", edit_user_registration_path, class: :"btn btn-default", role: :"button" %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-md-8">
    <% if current_user == @user %>
      <%= link_to "New Group", new_group_path, class: :"btn btn-success btn-block", role: :"button", remote: :true, id: :"new-button" %>
      <div id="new-group">
        <!-- This is where the post input will appear -->
      </div>
    <% end %>
    <% if @user.groups.any? %>
      <ol class="groups">
        <%= render @groups %>
      </ol>
      <%= will_paginate @groups %>
    <% end %>
  </div>
</div>